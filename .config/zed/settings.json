{
  // ╭─────────────────────────────────────────────╮
  // │ Editor Settings                             │
  // ╰─────────────────────────────────────────────╯
  "preferred_line_length": 80,
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "buffer_font_size": 15,
  "vim_mode": true,

  // ╭─────────────────────────────────────────────╮
  // │ UI Settings                                 │
  // ╰─────────────────────────────────────────────╯
  "icon_theme": "VSCode Icons (Light)",
  "theme": "Catppuccin Mocha",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "git_status": true
  },

  // ╭─────────────────────────────────────────────╮
  // │ Language-Specific Settings                  │
  // ╰─────────────────────────────────────────────╯
  "languages": {
    // Shell Languages
    "Bash": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "2", "-ci", "-"]
        }
      },
      "format_on_save": "on"
    },
    "Fish": {
      "formatter": {
        "external": {
          "command": "fish_indent"
        }
      },
      "format_on_save": "on"
    },

    // Web Languages
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },

    // Data Languages
    "JSON": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "YAML": {
      "formatter": {
        "external": {
          "command": "yamlfmt",
          "arguments": ["-formatter", "retain_line_breaks=true", "-"]
        }
      },
      "format_on_save": "on"
    },
    "TOML": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },

    // Documentation
    "Markdown": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },

    // Programming Languages
    "Lua": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["{buffer_path}", "-"]
        }
      }
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin"]
        }
      },
      "format_on_save": "on"
    },

    // Database
    "SQL": {
      "formatter": {
        "external": {
          "command": "sqlfluff",
          "arguments": ["format", "--dialect=ansi", "-"]
        }
      },
      "format_on_save": "on"
    }
  },

  // ╭─────────────────────────────────────────────╮
  // │ LSP Configuration                           │
  // ╰─────────────────────────────────────────────╯
  "lsp": {
    // Core Programming Languages
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "lua-language-server": {
      "settings": {
        "Lua": {
          "runtime": {
            "version": "LuaJIT"
          },
          "workspace": {
            "checkThirdParty": false,
            "library": []
          },
          "completion": {
            "callSnippet": "Replace"
          }
        }
      }
    },

    // Web Development
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "inlayHints": {
            "includeInlayParameterNameHints": "all",
            "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
            "includeInlayFunctionParameterTypeHints": true,
            "includeInlayVariableTypeHints": true,
            "includeInlayPropertyDeclarationTypeHints": true,
            "includeInlayFunctionLikeReturnTypeHints": true,
            "includeInlayEnumMemberValueHints": true
          }
        },
        "javascript": {
          "inlayHints": {
            "includeInlayParameterNameHints": "all",
            "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
            "includeInlayFunctionParameterTypeHints": true,
            "includeInlayVariableTypeHints": true,
            "includeInlayPropertyDeclarationTypeHints": true,
            "includeInlayFunctionLikeReturnTypeHints": true,
            "includeInlayEnumMemberValueHints": true
          }
        }
      }
    },

    // Data and Configuration Languages
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": []
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": false,
            "url": ""
          },
          "schemas": {}
        }
      }
    },
    "taplo": {
      "settings": {
        "taplo": {
          "schema": {
            "enabled": true,
            "catalogs": ["https://www.schemastore.org/api/json/catalog.json"]
          }
        }
      }
    },

    // Shell Languages
    "bash-language-server": {
      "settings": {
        "bashIde": {
          "formatting": false
        }
      }
    }
  },

  // ╭─────────────────────────────────────────────╮
  // │ AI and Context Servers                      │
  // ╰─────────────────────────────────────────────╯
  "context_servers": {
    "google-cloud-mcp": {
      "source": "custom",
      "command": {
        "path": "node",
        "args": [
          "/Users/steve.loveless/Development/not_my_projects/google-cloud-mcp/dist/index.js"
        ],
        "env": {
          "GOOGLE_APPLICATION_CREDENTIALS": "/Users/steve.loveless/.config/gcloud/application_default_credentials.json"
        }
      },
      "settings": {}
    },
    "Sentry": {
      "source": "custom",
      "command": {
        "path": "npx",
        "args": ["mcp-remote", "https://mcp.sentry.dev/sse"]
      }
    }
  },

  // ╭─────────────────────────────────────────────╮
  // │ Agent Configuration                         │
  // ╰─────────────────────────────────────────────╯
  "agent": {
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "openai",
      "model": "claude-4-sonnet"
    },
    "version": "2"
  },

  // ╭─────────────────────────────────────────────╮
  // │ Language Models                             │
  // ╰─────────────────────────────────────────────╯
  "language_models": {
    "openai": {
      "api_url": "https://proxy.fuelix.ai",
      "available_models": [
        {
          "name": "claude-3-7-sonnet",
          "display_name": "Claude 3.7 Sonnet (FI)",
          "max_tokens": 64000
        },
        {
          "name": "claude-4-sonnet",
          "display_name": "Claude 4 Sonnet (FI)",
          "max_tokens": 200000
        },
        {
          "name": "gemini-2.5-flash",
          "display_name": "Gemini 2.5 Flash (FI)",
          "max_tokens": 128000
        },
        {
          "name": "gemini-2.5-pro",
          "display_name": "Gemini 2.5 Pro (FI)",
          "max_tokens": 128000
        },
        {
          "name": "gpt-4o",
          "display_name": "GPT-4o (FI)",
          "max_tokens": 128000
        },
        {
          "name": "o1-mini",
          "display_name": "GPT O1 Mini (FI)",
          "max_tokens": 128000
        },
        {
          "name": "o3-mini",
          "display_name": "GPT O3 Mini (FI)",
          "max_tokens": 128000
        }
      ],
      "version": "1"
    }
  }
}
