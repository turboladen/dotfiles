[alias]
  ci = commit
  co = checkout
  st = status
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  fixlast = rebase -i HEAD~2
  local-merged-to-local = !git-local-merged-to-local-master
  local-merged-to-remote = !git-local-merged-to-remote-merged
  local-unmerged-to-remote = !git-local-unmerged-to-remote-unmerged
  rspec = !bin/rspec $(git st | rg spec | grep "modified:" | cut -b 14-)

[commit]
  gpgsign = true
	template = /Users/steve.loveless/.stCommitMsg
  ; gpgsign = true

[color]
  ui = true

[credential]
  helper = osxkeychain

[core]
  editor = nvim
	excludesfile = /Users/steve.loveless/.gitignore_global
  pager = delta

[delta]
  decorations = true
  line-numbers = true
  side-by-side = true
  syntax-theme = DarkNeon

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  tool = vimdiff

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[pager]
  branch = false

[push]
  default = simple

[status]
  submoduleSummary = true

[user]
	name = Steve Loveless
	email = 
[includeIf "gitdir:~/Development/agrian/"]
  path = .gitconfig-work
[includeIf "gitdir:~/Development/projects/"]
  path = .gitconfig-personal

[gpg]
  program = gpg
