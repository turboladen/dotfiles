[alias]
  ci = commit
  co = checkout
  st = status
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  fixlast = rebase -i HEAD~2
  local-merged-to-local = !git-local-merged-to-local-master
  local-merged-to-remote = !git-local-merged-to-remote-merged
  local-unmerged-to-remote = !git-local-unmerged-to-remote-unmerged
  rspec = !bin/rspec $(git st | rg spec | grep "modified:" | cut -b 14-)

[commit]
  gpgsign = true
  ; template = /Users/{{ yadm.user }}/.stCommitMsg

[color]
  ui = true
  status = auto
  branch = auto
  interactive = auto
  diff = auto

[credential]
  helper = osxkeychain

[core]
  editor = nvim
  excludesfile = /Users/{{ yadm.user }}/.gitignore_global
  pager = delta

[delta]
  features = decorations
  hyperlink = true
  line-numbers = true
  side-by-side = true
  syntax-theme = DarkNeon

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

[diff]
  colorMoved = default

[difftool]
  prompt = false

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only --features=interactive

[merge]
  conflictstyle = diff3
  tool = diff3

[pager]
  branch = false

[push]
  default = simple

[status]
  submoduleSummary = true

[user]
  name = Steve Loveless
