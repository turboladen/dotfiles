  path = .gitconfig-personal
[includeIf "gitdir:~/Development/not_my_projects/"]
  path = .gitconfig-personal
[includeIf "gitdir:~/.local/share/yadm/repo.git"]
  path = .gitconfig-personal
{% if yadm.class == "Work" %}
[includeIf "gitdir:~/Development/tac/"]
  path = .gitconfig-work
